{
  "name": "IdeaVive",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://news.yahoo.co.jp/*",
        "https://www.bbc.com/news/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "description": 
  "あなたの出したアイデアを育てます"
  ,
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background" : {
    "service_worker" : "js/background.js"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage"
  ],
  "action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },
  "manifest_version": 3
}
